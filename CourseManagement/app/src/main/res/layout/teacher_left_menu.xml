<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/img_fzu_logo"
                android:layout_centerVertical="true"
                android:id="@+id/imgvw_1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="第一个item"
                android:layout_marginLeft="20dp"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/imgvw_1"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/img_fzu_logo"
                android:layout_centerVertical="true"
                android:id="@+id/imgvw_2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="第二个item"
                android:layout_marginLeft="20dp"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/imgvw_2"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/img_fzu_logo"
                android:layout_centerVertical="true"
                android:id="@+id/imgvw_3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="第三个item"
                android:layout_marginLeft="20dp"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/imgvw_3"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/img_fzu_logo"
                android:layout_centerVertical="true"
                android:id="@+id/imgvw_4"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="第四个item"
                android:layout_marginLeft="20dp"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/imgvw_4"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
